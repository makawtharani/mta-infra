{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DynamoDBRateLimitAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/mta-chat-ratelimit-*"
      ]
    }
  ]
}

